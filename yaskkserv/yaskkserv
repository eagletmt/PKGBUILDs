#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

YASKKSERV_JISYO=/usr/share/skk/SKK-JISYO.L.yaskkserv
YASKKSERV_PORT=1178
YASKKSERV_TYPE=hairy

PID=`pidof -o %PPID /usr/sbin/yaskkserv_hairy`
case "$1" in
  start)
    stat_busy "Starting yaskkserv"
    [ -z "$PID" ] && /bin/su nobody -s /bin/sh -c "/usr/sbin/yaskkserv_$YASKKSERV_TYPE -p $YASKKSERV_PORT $YASKKSERV_JISYO"
    if [ $? -gt 0 ]; then
      stat_fail
    else
      echo $PID > /var/run/yaskkserv.pid
      add_daemon yaskkserv
      stat_done
    fi
	;;
  stop)
    stat_busy "Stopping yaskkserv"
    [ ! -z "$PID" ] && kill $PID &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm -f /var/run/yaskkserv.pid
      rm_daemon yaskkserv
      stat_done
    fi
	;;
  restart)
    $0 stop
    $0 start
	;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac
exit 0
