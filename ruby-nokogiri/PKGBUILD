# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=ruby-nokogiri
_realname=nokogiri
pkgver=1.4.5
pkgrel=1
pkgdesc='Nokogiri (é‹¸) is an HTML, XML, SAX, and Reader parser'
arch=("i686" "x86_64")
url='http://nokogiri.org/'
license=('MIT')
depends=("ruby" "libxslt")
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_realname-$pkgver.gem)
noextract=($_realname-$pkgver.gem)

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_realname-$pkgver.gem
}

