# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=ruby-nokogiri
_realname=nokogiri
pkgver=1.6.0
pkgrel=1
pkgdesc="HTML, XML, SAX, and Reader parser"
arch=("i686" "x86_64" "armv7h")
url='http://nokogiri.org'
license=("MIT")
depends=("ruby" "ruby-mini_portile" "libxslt")
makedepends=('rubygems')
source=(https://rubygems.org/downloads/$_realname-$pkgver.gem)
noextract=($_realname-$pkgver.gem)

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  export NOKOGIRI_USE_SYSTEM_LIBRARIES=1
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_realname-$pkgver.gem
}

# vim:set ts=2 sw=2 et:
md5sums=('3f60f47e19e5e7ebff3f9480305de1ed')
