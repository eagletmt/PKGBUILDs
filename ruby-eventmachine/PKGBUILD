# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=ruby-eventmachine
_realname=eventmachine
pkgver=1.0.0beta.4
pkgrel=1
pkgdesc="Ruby/EventMachine library"
arch=("i686" "x86_64")
url='http://rubyeventmachine.com'
license=("GPL")
depends=("ruby")
makedepends=('rubygems')
_gem=$_realname-1.0.0.beta.4.gem
#source=(http://rubygems.org/downloads/$_realname-$pkgver.gem)
source=(http://rubygems.org/downloads/$_gem)
#noextract=($_realname-$pkgver.gem)
noextract=($_gem)

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" $_gem
}

