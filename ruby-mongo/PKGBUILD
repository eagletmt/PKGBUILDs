# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=ruby-mongo
_realname=mongo
pkgver=1.6.0
pkgrel=1
pkgdesc='Ruby driver for the MongoDB'
arch=("any")
url='http://www.mongodb.org'
license=('Apache')
depends=("ruby" "ruby-bson=$pkgver")
optdepends=("ruby-bson_ext=$pkgver: for optimum MongoDB Ruby driver performance")
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_realname-$pkgver.gem)
noextract=($_realname-$pkgver.gem)

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_realname-$pkgver.gem
}

# vim:set ts=2 sw=2 et:
md5sums=('1a277779967e2bc0485ff4c59ea8a609')
