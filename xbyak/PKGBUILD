# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=xbyak
pkgver=3.01
_date=20110324
pkgrel=1
pkgdesc='x86, x64 JIT assembler'
arch=('i686' 'x86_64')
url='http://homepage1.nifty.com/herumi/soft/xbyak_e.html'
depends=()
license=('BSD')
source=("http://homepage1.nifty.com/herumi/soft/xbyak/xbyak.${_date}.zip")

build() {
  cd "$srcdir/$pkgname"

  chmod 644 xbyak/*.h
  make PREFIX="$pkgdir/usr" install
  install -Dm644 "$srcdir/$pkgname/COPYRIGHT" \
    "$pkgdir/usr/share/licenses/$pkgname/COPYRIGHT"
}

md5sums=('147d8904b994515afd29c95c06548618')
