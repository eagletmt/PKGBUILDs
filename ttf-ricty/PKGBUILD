# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=ttf-ricty
pkgver=2.0.2
pkgrel=1
pkgdesc='Japanese TrueType font for developers by mixing Inconsolata and Migu 1M.'
arch=('any')
url='http://save.sys.t.u-tokyo.ac.jp/~yusa/fonts/ricty.html'
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(http://save.sys.t.u-tokyo.ac.jp/~yusa/fonts/ricty/Ricty-$pkgver.tar.gz)

build() {
  install -d "$pkgdir/usr/share/fonts/TTF"
  install -m644 "$srcdir/Ricty-$pkgver/"*.ttf "$pkgdir/usr/share/fonts/TTF/"

  install -d "$pkgdir/usr/share/licenses/$pkgname"
  install -m644 "$srcdir/Ricty-$pkgver/README" "$pkgdir/usr/share/licenses/$pkgname/"
  install -d "$pkgdir/usr/share/licenses/$pkgname/Licenses"
  install -Dm644 "$srcdir/Ricty-$pkgver/Licenses/"* "$pkgdir/usr/share/licenses/$pkgname/Licenses"
}

md5sums=('cbf857b7cd91213b05220b6fcdbcde31')
