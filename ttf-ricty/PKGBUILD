# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=ttf-ricty
pkgver=3.0.0
pkgrel=1
pkgdesc='Japanese TrueType font for developers by mixing Inconsolata and Migu 1M.'
arch=('any')
url='http://save.sys.t.u-tokyo.ac.jp/~yusa/fonts/ricty.html'
license=('public domain')
depends=('fontconfig' 'xorg-font-utils')
makedepends=('fontforge' 'ttf-inconsolata' 'ttf-migu')
install=ttf.install
source=(http://save.sys.t.u-tokyo.ac.jp/~yusa/fonts/ricty/Ricty-$pkgver.tar.gz
       remove-RemoveOverlap.patch)

build() {
  cd "$srcdir/Ricty-$pkgver"
  patch -Np0 -i "$srcdir/remove-RemoveOverlap.patch"
  ./ricty_generator.sh /usr/share/fonts/TTF/{ttf-inconsolata.otf,Migu-1M-regular.ttf,Migu-1M-bold.ttf}
}

package() {
  cd "$srcdir/Ricty-$pkgver"
  install -d "$pkgdir/usr/share/fonts/TTF"
  install -m644 *.ttf "$pkgdir/usr/share/fonts/TTF/"
}

md5sums=('de76a71720e12a37c275b5551366c47c'
         '6ecc251516421dfa11fd7413577170c7')
