# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=ruby-mini_portile
_realname=mini_portile
pkgver=0.5.1
pkgrel=1
pkgdesc="minimalistic, simplistic and stupid implementation of a port/recipe system for developers"
arch=("any")
url='https://github.com/luislavena/mini_portile'
license=("MIT")
depends=("ruby")
makedepends=('rubygems')
source=(https://rubygems.org/downloads/$_realname-$pkgver.gem)
noextract=($_realname-$pkgver.gem)

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_realname-$pkgver.gem
}

# vim:set ts=2 sw=2 et:
md5sums=('cb8c0f8e9f3777289613198d0abef699')
