# Maintainer: eagletmt <eagletmt@gmail.com>
pkgname=ruby-bson_ext
_realname=bson_ext
pkgver=1.8.3
pkgrel=1
pkgdesc="C extensions for Ruby BSON."
arch=("i686" "x86_64" "arm")
url='http://www.mongodb.org'
license=("Apache")
depends=("ruby" "ruby-bson>=1.8.3" "ruby-bson<1.9")
makedepends=('rubygems')
source=(https://rubygems.org/downloads/$_realname-$pkgver.gem)
noextract=($_realname-$pkgver.gem)

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_realname-$pkgver.gem
}

# vim:set ts=2 sw=2 et:
md5sums=('8a6cb0c66654bfb4bd6e016691da4298')
